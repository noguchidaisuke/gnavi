<%= form_with(model:@restaurant.comments.new,url: restaurant_comments_path) do |f|%>
    <div class="field">
        <div id="star-rating"></div>
    </div>
    <div class="form_group">
        <%= f.label :comment %>
        <%= f.text_area :comment %>
    </div>
    <%= f.submit'submit' %>
<%end%>


<script>
  $('#star-rating').raty({
    path: '/assets/',
    scoreName: 'comment[rating]'
  });
</script>
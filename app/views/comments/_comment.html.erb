<% if comment.comment %>
  <div class="p-comment__item">
    <div class='comment-top row'>
      <div class="comment-icons col-xs-3">
        <% if comment.user.avatar.attached? %>
          <div class="user-icon"><%= image_tag(comment.user.avatar)%></div>
        <%else%>
          <div class="user-icon"><img src="<%= gravatar_url(comment.user,size: 100) %>"></div>
        <%end%>
        <div class="comment-name"><%= comment.user.name %></div>
      </div>
      <div class="balloon col-xs-9">
        <span><%= simple_format(comment.comment) %></span>
      </div>
    </div>
    <div class="p-comment__bottomLine">
      <i class="far fa-calendar-alt"></i><span><%= comment.created_at %></span>
      <% if comment.user == current_user %>
        <span><%= link_to '削除', comment, method: :delete, data: { confirm: '削除してよろしいですか？' },class: 'btn btn-danger' %></span>
      <% end %>
    </div>
  </div>
<% end %>

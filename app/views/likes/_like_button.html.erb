<% if current_user.like?(restaurant) %>
  <%= form_with(url: like_path(restaurant.id),method: :delete) do |f| %>
    <%= f.submit 'お気に入りを外す', class: 'btn btn-danger btn-xs' %>
  <% end %>
<% else %>
  <%= form_with(url: likes_path(restaurant.g_id)) do |f|%>
    <%= hidden_field_tag :restaurant_g_id, restaurant.g_id %>
    <%= f.submit 'お気に入りに追加', class: 'btn btn-warning btn-xs' %>
  <% end %>
<% end %>
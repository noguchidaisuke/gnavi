<% content_for(:cover) do %>
  <div class="sign-body">
    <div class="model-dialog text-center">
      <div class="main-section col-sm-6 col-sm-offset-3 col-lg-4 col-lg-offset-4">
        <div class="model-content">
          <div class="col-12 user-img">
            <i class="fab fa-gofore"></i>
          </div>
          <%= form_with scope: :session,url: login_path do |f| %>
            <form class="col-12">
              <div class="form-group email">
                <%= f.text_field :email, class: 'form-control',placeholder: "Email" %>
              </div>
              <div class="form-group password">
                <%= f.text_field :password, class: 'form-control',placeholder: "Password" %>
              </div>
              <button type="submit" class="btn-login"><i class="fas fa-sign-in-alt"></i>ログイン</button>
              <p class="or">or</p>
              <button type="submit" class="btn-tweet-login"><i class="fab fa-twitter"></i>Twitterでログイン</button>
            </form>
          <% end %>
        </div> <!-- end of cotent -->
      </div>
    </div>
  </div>
<%end%>

<div class="user-profile">
  <div class="user-icon text-center">
  <% if @user.avatar.attached? %>
    <%= image_tag(@user.avatar) %>
  <% else %>
    <img src="<%= gravatar_url(@user,size: 100) %>">
  <% end %>
  </div>
  <div class="name text-center">
    <h1><%= @user.name %></h1>
  </div>
</div>

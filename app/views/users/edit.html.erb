<%content_for :cover do%>
  <div class="mypage_cover">
    <div class="container">
      <div class="row">
        <%= render 'sidebar',user: @user %>
        <div class="col-sm-8">
          <div class="mypage">
            <h3 class="edit-user_title text-center">プロフィール編集</h3>
            <%= form_with model: @user,method: :patch do |f| %>
              <div class="form-group row">
                <%= f.label :image, class: 'col-xs-3 text-right edit-user_label' %>
                <% if @user.avatar.attached? %>
                  <div class="col-xs-3"><%= image_tag(@user.avatar.variant(resize: '100x100!')) %></div>
                <% else %>
                  <div class="col-xs-3"><img src="<%= gravatar_url(@user,size: 100) %>"></div>
                <% end %>
                <%= f.file_field :avatar %>
              </div>
              <div class="form-group row">
                <%= f.label :name, class: 'col-xs-3 text-right edit-user_label' %>
                <%= f.text_field :name, class: 'form-effect col-xs-8',placeholder: "名前" %>
              </div>
              <div class="form-group row">
                <%= f.label :email, class: 'col-xs-3 text-right edit-user_label' %>
                <%= f.email_field :email, class: 'form-effect col-xs-8',placeholder: "Email" %>
              </div>
              <div class="form-group row">
                <%= f.label :profile, class: 'col-xs-3 text-right edit-user_label' %>
                <%= f.text_area :profile, class: 'form-effect form-area col-xs-8',placeholder: "プロフィール" %>
              </div>
              <div class="text-center"><%= f.submit '変更する',class: 'edit-user_submit' %></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<%end%>
<style>
.form-effect{
  border: 1px solid #ccc;
  box-shadow:0 0 2px;
  border-radius:3px;
  margin-bottom:30px;
  height:35px;
}
.form-area{
  height:150px;
  padding:10px;
}
.edit-user_title{
  padding-bottom:20px;
  margin-top:0px;
  border-bottom:1px solid #ccc;
  font-family:'HiraMinProN-W3';
  font-weight:bold;
}
.edit-user_label{
  padding-top:5px;
  font-size:1.2em;
  margin-right:10px;
}
.edit-user_submit{
  background-color: #fff;
  border-radius:30px;
  padding:10px 20px;
  font-size:1.2em;
  width:50%;
  display:inline-block;
  color:white;
  background-color:darkorange;
  font-weight:bold;
}
</style>